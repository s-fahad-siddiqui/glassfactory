<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_field_service_prod_custom" model="ir.ui.view">
        <field name="name">sale.order.service.prod.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">   
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_uom']" position="after" >
                <field name="service_product_ids" widget="many2many_tags"/>
                <!-- <field name="sitereq_proj_type" />        -->
            </xpath>              
        </field>
    </record>


    <record id="view_field_parent_pr_custom" model="ir.ui.view">
        <field name="name">sale.order.parent.ref.prod.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">   
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="before" >
                <field name="product_parent_ref_id" />
                  <field name="child_ref_ids" />
                

            </xpath>              
        </field>
    </record>

    
    <record id="view_field_button_pr_custom" model="ir.ui.view">
        <field name="name">sale.order.button.ref.prod.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">   
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after" >
                <button name="trigger_prod" type="object" string="Update services" class="btn-primary" attrs="{'invisible':[('product_type','=','service')]}" />

                   <field name="product_type" />

            </xpath>              
        </field>
    </record>


    <record id="view_field_parent_prod_custom" model="ir.ui.view">
        <field name="name">sale.order.allsize.prod.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">   
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="after" >
                <field name="height_prod_line" />
                <field name="width_prod_line" />
                <field name="sqm_prod_line" />

            </xpath>              
        </field>
    </record>

     <record id="view_field_allsize_prod_custom" model="ir.ui.view">
        <field name="name">product.template.allsize.prod.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">   
            <xpath expr="//form[@name='Product Template']/sheet[@name='product_form']/notebook[1]/page[@name='general_information']/group[1]/group[@name='group_standard_price']/label[1]" position="before">
                <field name="height_prod" />
                <field name="width_prod" />
                <field name="size_prod" />
            </xpath>              
        </field>
    </record>

      <record id="view_field_allsize_prod_custom" model="ir.ui.view">
        <field name="name">product.product.allsize.prod.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">   
           <xpath expr="//field[@name='tic_category_id']" position="before">
                <field name="height_prod" />
                <field name="width_prod" />
                <field name="size_prod" />
            </xpath>              
        </field>
    </record>

